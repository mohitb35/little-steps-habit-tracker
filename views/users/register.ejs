<%- include('../partials/head', {title: "Create a new Little Steps account"});
%>
<body class="preload">
	<div class="container">
		<h1 class="title">Register</h1>
		<main class="main-contents">
			<%- include('../partials/flash') %>
			<div class="form-container">
				<form id="register-form" action="/register" method="POST" novalidate>
					<div class="form-contents">
						<p class="form-instructions">
							Create an account by filling up the details below and begin your
							journey to better habits
						</p>
						<div class="form-feedback"></div>
						<div class="form-field required">
							<label for="name">Name</label>
							<input type="text" id="name" name="user[name]" autofocus required/>
							<div class="feedback"></div>
						</div>
						<div class="form-field required">
							<label for="email">Email</label>
							<input type="text" id="email" name="user[email]" required/>
							<div class="feedback"></div>
						</div>
						<div class="form-field required">
							<label for="password">Password</label>
							<input type="password" id="password" name="user[password]" required/>
							<div class="feedback"></div>
						</div>
						<div class="form-field required">
							<label for="confirm-password">Confirm Your Password</label>
							<input
								type="password"
								id="confirm-password"
								name="confirm-password"
								required
							/>
							<div class="feedback"></div>
						</div>
					</div>
					<button class="large-button" type="submit">Create Account</button>
				</form>
			</div>

			<div class="alternate-action">
				<p>Already have an account?</p>
				<a class="alternate-action-link" href="/login">Login</a>
			</div>
		</main>
	</div>
	<%- include('../partials/footer'); %>
